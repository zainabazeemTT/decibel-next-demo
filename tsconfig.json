{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "checkJs": false,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@app/assets": ["libs/assets"],
      "@app/collections": ["libs/collections"],
      "@app/generic-collections": ["collections/__generic"],
      "@app/components": ["libs/components"],
      "@app/data": ["libs/data"],
      "@app/redux": ["libs/redux-store"],
      "@app/styles": ["libs/styles"],
      "@app/theme": ["libs/theme"],
      "@app/types": ["libs/types"],
      "@app/utils": ["libs/utils"],
      "@app/forms": ["libs/data/forms"],
      "@app/modules": ["libs/modules"],
      "@app/services": ["libs/services"],
      "@app/hooks": ["libs/utils/hooks"],
      "~collections": ["collections"],
      "~public": ["public"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"]
}
